<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/lin_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E6E9E9"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/user_created"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:id="@+id/txt_user"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نابلس"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#E6E9E9"
                    android:textColor="@color/color_2"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:gravity="start" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#E6E9E9"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/customer_"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:id="@+id/txt_customer"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نابلس"
                    android:textAlignment="textStart"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#E6E9E9"
                    android:textColor="@color/color_2"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:gravity="start" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff1f1"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/timetotal"
                    android:tint="#ffffff"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                    android:id="@+id/txt_time"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33/66/788"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#eff1f1"
                    android:textColor="@color/color_2"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff1f1"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/action_stock"
                    android:tint="#ffffff"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                    android:id="@+id/txt_action"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33/66/788"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#eff1f1"
                    android:textColor="@color/color_2"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff1f1"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/coins_"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                    android:id="@+id/txt_price"
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="33/66/788"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="#eff1f1"
                    android:textColor="@color/color_2"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>