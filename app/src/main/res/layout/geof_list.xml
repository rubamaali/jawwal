<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/type"
            android:orientation="horizontal"
            android:gravity="center|right"
            android:paddingRight="20dp"
            android:background="#ffffff"
            android:visibility="visible"
            android:elevation="5dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/typeclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardBackgroundColor="#ece9e9"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/cancel2"
                        android:backgroundTint="@color/colorPrimary"
                        />


                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/loc_type"
                        android:gravity="center|right"
                        android:textSize="13sp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="match_parent"
                        android:text="@string/All"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/checkoutclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardBackgroundColor="#ece9e9"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >

                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/txt_custom_name"
                        android:gravity="center|right"
                        android:textSize="12dp"
                        android:paddingRight="5dp"
                        android:maxWidth="100dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        android:text="test name "
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/check_in"
                        android:backgroundTint="@color/colorPrimary"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:cardBackgroundColor="#ece9e9"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/cancel2"
                        android:backgroundTint="#850606"

                        />


                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:gravity="center|right"
                        android:textSize="13sp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="match_parent"
                        android:text="@string/tags"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"

                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                android:id="@+id/get_all"
                android:textSize="15dp"
                android:paddingRight="5dp"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_all"
                android:textColor="#52adf9"
                android:paddingLeft="10dp"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tags"
            android:orientation="vertical"
            android:gravity="center|right"
            android:background="#ffffff"
            android:visibility="gone"
            android:layout_below="@+id/type"

            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/TagsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/FieldsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

        <ListView
            android:id="@+id/list_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_below="@+id/tags">
        </ListView>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshreport2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags"
            android:visibility="visible">
            <ListView
                android:id="@+id/list_geoz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:visibility="gone"
                android:layout_below="@+id/tags">
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>
        <LinearLayout
            android:id="@+id/linlaHeaderProgress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/pbHeaderProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"></ProgressBar>
        </LinearLayout>


    </RelativeLayout>
    <include
        android:id="@+id/show_menu"
        layout="@layout/location_menu"
        android:visibility="gone"

        />
</RelativeLayout>