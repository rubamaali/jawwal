<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|bottom"
    android:orientation="vertical"
    android:background="@null"
    android:id="@+id/option"
    android:layoutDirection="rtl"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout2"
        android:gravity="center"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="15dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="5"
                android:background="#3BD3D2D2"
                >

                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:layout_height="30dp"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:id="@+id/geof_name"
                    />
            </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:weightSum="4"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              >
              <LinearLayout
                  android:id="@+id/history"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  >

                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:background="@drawable/hreport"
                      android:backgroundTint="@color/color_text_black"
                      android:gravity="center"
                      android:textColor="@color/color_text_black" />
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/Relatedeport"
                      android:gravity="center"
                      android:textSize="13sp"
                      android:textColor="@color/color_text_black"
                      android:layout_marginBottom="5dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/show_info"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  >

                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="30dp"
                      android:layout_height="35dp"
                      android:background="@drawable/show_details"
                      android:backgroundTint="@color/color_text_black"
                      android:gravity="center"
                      android:textColor="@color/color_text_black" />
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="50dp"
                      android:layout_height="wrap_content"
                      android:text="@string/Details"
                      android:gravity="center"
                      android:textSize="13sp"
                      android:textColor="@color/color_text_black"
                      android:layout_marginBottom="5dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/Navigate"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  >
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:background="@drawable/show"
                      android:backgroundTint="@color/color_text_black"
                      android:gravity="center"
                      android:textColor="@color/color_text_black" />
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="60dp"
                      android:layout_height="wrap_content"
                      android:text="@string/Navigate"
                      android:gravity="center"
                      android:textSize="13sp"
                      android:textColor="@color/color_text_black"
                      android:layout_marginBottom="5dp"
                      />
              </LinearLayout>
              <LinearLayout
                  android:id="@+id/order_history"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
                  android:gravity="center"
                  >
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:background="@drawable/buy_order"
                      android:backgroundTint="@color/color_text_black"
                      android:gravity="center"
                      android:textColor="@color/color_text_black" />
                  <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                      android:layout_width="60dp"
                      android:layout_height="wrap_content"
                      android:text="@string/order_history"
                      android:gravity="center"
                      android:textSize="13sp"
                      android:textColor="@color/color_text_black"
                      android:layout_marginBottom="5dp"
                      />
              </LinearLayout>
          </LinearLayout>
           



            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/CANCEL"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>