<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#102D5B75"
                >
                <TableLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp">

                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        >
                        <ImageView
                            android:id="@+id/car_name"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_column="0"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/car_name" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_car_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="1dp"
                           android:textColor="#7f7f7f"
                            android:textSize="13dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp"

                        >

                        <ImageView
                            android:id="@+id/car_name2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_column="0"
                            android:tint="@color/colorPrimary"
                            android:src="@drawable/driver_name" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_driver_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="1dp"
                            android:textColor="#7f7f7f"
                            android:textSize="14dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:layout_column="0"
                            android:layout_marginTop="5dp"
                            android:tint="@color/colorPrimary"
                            android:src="@mipmap/ic_re" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="1dp"
                            android:textColor="#7f7f7f"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="5dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:layout_column="0"
                            android:tint="@color/colorPrimary"
                            android:src="@mipmap/ic_phone" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_margin="1dp"
                            android:textSize="14sp"
                            android:textColor="#7f7f7f"
                            />
                    </TableRow>

                </TableLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/cara_menu"
                    android:tint="@color/colorPrimary"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <View
                android:id="@+id/line7"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_weight="1"
                android:background="#206E6E79"
                android:padding="2dip" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <WebView
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:tint="#202D5B75" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#102D5B75">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_weight="1"
                            android:background="#206E6E79"
                            android:padding="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tabl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/img6"
                                android:layout_width="40dp"
                                android:layout_height="25dp"
                                android:layout_column="0"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/pin"
                                android:tint="@color/colorPrimary"
                                 />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/txt_las_location"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:paddingTop="0dp"
                                android:textColor="#7f7f7f"
                                android:textSize="13sp"
                                android:layout_weight="0.30" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="#206E6E79" />

                            <ImageView
                                android:id="@+id/img7"
                                android:layout_width="24dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/time" />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/txt_last_update"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:paddingTop="0dp"
                                android:textSize="13sp"
                                android:textColor="#7f7f7f"
                                />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        <View
                            android:id="@+id/line6"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_weight="1"
                            android:background="#206E6E79"
                            android:padding="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tabl7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img9"
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/odometer" />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/txt_odometer"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:textColor="#7f7f7f"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="#206E6E79" />

                            <ImageView
                                android:id="@+id/img4"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/version" />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/txt_version"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:textColor="#7f7f7f"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_weight="1"
                            android:background="#206E6E79"
                            android:padding="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tab_ideling"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/img_time"
                                android:layout_width="32dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/stop_timee" />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/stop_time"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:textColor="#7f7f7f"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/line99"
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:background="#206E6E79" />

                            <ImageView
                                android:id="@+id/img_idel"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginTop="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ideling_time" />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                                android:id="@+id/ide_time"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:padding="15dp"
                                android:textColor="#7f7f7f"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dip"
                            android:layout_weight="1"
                            android:background="#206E6E79"
                            android:padding="2dip" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/tabl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">
                            <ImageView
                                android:id="@+id/iiii"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:visibility="invisible"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/ic_map2"
                                android:layout_weight="0.17" />
                            <ImageView
                                android:id="@+id/img8"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/map_menu"
                                android:backgroundTint="@color/colorPrimary"
                                />

                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                android:id="@+id/address_vehicles"
                                android:layout_width="250dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="#5A89D7"
                                android:textSize="12sp"
                                android:layout_weight="0.15" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>