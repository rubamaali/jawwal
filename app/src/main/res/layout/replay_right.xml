<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/outgoing_bubble"
            android:paddingStart="30dp"
            android:layoutDirection="rtl"
            android:textAlignment="viewStart"
            android:text="test test test "
            android:textColor="#fff"
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:id="@+id/msg"
            android:paddingLeft="30dp"
            android:gravity="start" />

        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/msg"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:paddingStart="10dp"
            android:text="09:11:59 23 sep 2017"
            android:textColor="@color/color_text_black"
            android:textSize="10sp"
            android:paddingLeft="10dp" />
    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
        android:id="@+id/lastseen"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_toStartOf="@+id/time"
        android:layout_below="@+id/msg"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:paddingStart="10dp"
        android:textColor="#686e6e"
        android:textSize="10dp"
        android:drawableEnd="@drawable/show_time2"
        android:paddingLeft="10dp"
        android:drawableRight="@drawable/show_time2"
        android:layout_toLeftOf="@+id/time" />

    <ProgressBar
        android:id="@+id/pbHeaderProgress"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/msg"
        android:layout_toLeftOf="@+id/msg"
        android:layout_toStartOf="@+id/msg"
        android:elevation="5dp" />



    </RelativeLayout>


