<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="15dp"
        card_view:cardUseCompatPadding="true"
        android:layout_margin="3dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                android:id="@+id/txt_trip"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/quarter_circle"
                android:elevation="5dp"
                android:gravity="center"
                android:text="1"
                android:alpha="0.8"
                android:textColor="#fff"
                android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff7f7"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/location"
                    android:background="@color/colorPrimary"
                    android:padding="7dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomButtonB
                    android:id="@+id/address"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="نابلس"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:background="#eff7f7"
                    android:textColor="@color/color_text_black"
                    android:paddingLeft="10dp"
                    android:gravity="start"
                    android:paddingTop="5dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff7f7"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_from"
                    android:tint="#ffffff"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomButtonL
                    android:id="@+id/txt_from"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="33/66/788"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="#eff7f7"
                    android:textColor="@color/color_text_black"
                    android:paddingLeft="10dp"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff7f7"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_to"
                    android:tint="#ffffff"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomButtonL
                    android:id="@+id/txt_to"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="33/66/788"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="#eff7f7"
                    android:textColor="@color/color_text_black"
                    android:paddingLeft="10dp"
                    android:gravity="start"
                    android:paddingTop="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#eff1f1"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/timetotal"
                    android:tint="#ffffff"
                    android:background="@color/colorPrimary"
                    android:padding="7dp"
                    />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomButtonL
                    android:id="@+id/total_time"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="1:30"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:background="#eff1f1"
                    android:textColor="@color/color_text_black"
                    android:paddingLeft="10dp"
                    android:gravity="start"
                    android:paddingTop="5dp"
                     />
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>