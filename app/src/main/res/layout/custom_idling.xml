<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#eff7f7"
            >

            <LinearLayout
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#eff7f7"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/timerange"
                        android:tint="@color/colorPrimary"
                        android:padding="2dp"
                        />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/time"
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#eff7f7"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="#4CAF50"
                        android:background="@drawable/ign" />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/ignontime"
                        android:paddingStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="0dp"
                        android:backgroundTint="#F44336"
                        android:background="@drawable/ign" />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/ignoff"
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#eff7f7"

                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/totaltime"
                        android:tint="@color/colorPrimary"
                        android:padding="2dp"
                        />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/stoptotaltime"
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#eff1f1"

                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:padding="3dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/pin" />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/add"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="#eff1f1"
                    android:paddingBottom="3dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/point"
                        android:padding="2dp"
                        android:tint="@color/colorPrimary"
                        android:id="@+id/imgpoint"
                        />
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:paddingStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="33/66/788"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_text_black"
                        android:paddingLeft="10dp"
                        android:textAlignment="viewStart"
                        android:gravity="start"
                        android:id="@+id/point"
                        />
                </LinearLayout>


            </LinearLayout>

            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                android:id="@+id/trip"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:alpha="0.8"
                android:layout_marginTop="40dp"
                android:background="@drawable/quarter_circle"
                android:elevation="5dp"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>
        <!-- put whatever you want -->
    </android.support.v7.widget.CardView>
</RelativeLayout>