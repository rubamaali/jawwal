<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="20dp" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                            android:id="@+id/start"
                            android:layout_width="155dp"
                            android:layout_height="30dp"
                            android:paddingStart="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/startrip"
                            android:textAlignment="viewStart"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:paddingLeft="5dp"
                            android:gravity="start" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                            android:id="@+id/end"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:paddingStart="5dp"
                            android:paddingTop="2dp"
                            android:text="@string/endtrip"
                            android:textAlignment="viewStart"
                            android:textColor="#fff"
                            android:textSize="13dp"
                            android:paddingLeft="5dp"
                            android:gravity="start" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/clock"
                            android:tint="@color/color_text_black"
                            />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_start_time"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:elevation="3dp"
                            android:text="12:59:59"
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:gravity="start" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:elevation="3dp"
                            android:text="12:59:59"
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:gravity="start" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/odometer"
                            android:padding="2dp"
                            android:tint="@color/color_text_black"
                             />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_start_odometer"
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:text="6666km"
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:gravity="start" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_end_odometer"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:paddingTop="2dp"
                            android:text="100km"
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:gravity="start" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp">

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:tint="@color/color_text_black"
                            android:src="@drawable/map"/>

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_from_address"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingEnd="20dp"
                            android:paddingTop="2dp"
                            android:text="Bethlehem.Zatara.."
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:paddingRight="20dp"
                            android:gravity="start" />

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/txt_to_address"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:text="Bethlehem.Zatara.."
                            android:textAlignment="viewStart"
                            android:textColor="#7f7f7f"
                            android:textSize="12sp"
                            android:gravity="start" />
                    </TableRow>
                </TableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#7f7f7f" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TableLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp"
                            android:padding="3dp">

                            <TableRow>

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:paddingTop="2dp"
                                    android:text="@string/total_odometer"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:id="@+id/txt_odometer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:paddingTop="2dp"
                                    android:text="100km"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />
                            </TableRow>

                            <TableRow>

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:paddingTop="2dp"
                                    android:text="@string/Time_Period"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:id="@+id/txt_total_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:paddingTop="2dp"
                                    android:text=" 100km"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />
                            </TableRow>

                            <TableRow>

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:paddingTop="2dp"
                                    android:text="@string/Top_Speed"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />

                                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                    android:id="@+id/txt_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginStart="10dp"
                                    android:paddingTop="2dp"
                                    android:text="100km/h"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/color_text_black"
                                    android:textSize="11sp"
                                    android:gravity="start" />
                            </TableRow>

                        </TableLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                                android:id="@+id/txt_trip"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="end"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/quarter_circle"
                                android:elevation="5dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#fff"
                                android:textSize="15dp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!-- put whatever you want -->
    </android.support.v7.widget.CardView>
</RelativeLayout>