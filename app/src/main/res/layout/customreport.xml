<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eff1f1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                tools:ignore="NotSibling">


                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:id="@+id/customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="tset"
                    android:textColor="#434343"
                    android:textSize="12sp" />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:id="@+id/report_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="tset"
                    android:textColor="#434343"
                    android:textSize="11sp" />


            </LinearLayout>
            <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                android:id="@+id/txt_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tset"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:textSize="13sp" />
            <LinearLayout
                android:id="@id/cell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                >
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="name"
                    android:textColor="#212121"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/replay"
                    android:layout_toLeftOf="@id/checkbox"
                    android:background="#ffffff"
                    android:layout_toEndOf="@id/replay"
                    android:layout_toStartOf="@id/checkbox" />
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="نابلس نابلس.ش.فلسطين,Nablus Nablus.Palestine    "
                    android:textAlignment="center"
                    android:layout_below="@+id/name"
                    android:gravity="center"
                    android:textColor="@color/color_text_black"
                    android:textSize="11sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/txt_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:text="2017/07/31 14:34:55"
                        android:textColor="@color/color_text_black"
                        android:textSize="12sp" />
                    <ImageView
                        android:id="@+id/open_info"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="4dp"
                        android:layout_alignParentEnd="true"
                        android:padding="5dp"
                        android:src="@drawable/arrow"
                        android:tint="@color/colorPrimary"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/more_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#DBD8D8"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/distance_write"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/write_dis"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp"
                            android:textAlignment="viewStart"
                            android:gravity="start" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/lin1"
                            >
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/distance_done"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:textAlignment="viewStart"
                            android:gravity="start"
                            android:id="@+id/done_diss"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lin4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        >
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/done_address"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp"/>
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/done_add"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="4"
                        android:id="@+id/lin5"
                        >
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/done_time"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/done_time"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_text_black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:gravity="center"
                    android:background="#BEBFC0" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="6"
                    android:layoutDirection="rtl"
                    >
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                       />
                    <RelativeLayout
                        android:id="@+id/replay"
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewB
                            android:id="@+id/replies"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:textAlignment="center"
                            android:gravity="center_vertical"
                            android:textColor="#434343"
                            android:layout_marginRight="13dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/chat_icon"
                            android:backgroundTint="#000000"
                            android:textSize="10sp" />
                        <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                            android:id="@+id/num_replay"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/circle_"
                            android:textAlignment="center"
                            android:textSize="8sp"
                            android:textColor="#ffffff" />
                    </RelativeLayout>
                    <ImageView
                        android:id="@+id/map"
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:layout_height="18dp"
                        android:src="@drawable/pin_red"
                        android:visibility="visible" />
                    <RelativeLayout
                        android:id="@+id/historyReport"
                        android:layout_width="80dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/hreport"
                            android:backgroundTint="@color/color_text_black" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/donrelative"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"

                        >
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:button="@null"
                        android:background="@drawable/checkselector"
                        />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                    <com.lite.pits_jawwal.pitstracklite.Fount.CustomTextViewL
                        android:id="@+id/skip"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"
                        android:textColor="#940707"
                        android:gravity="center_horizontal"
                        android:paddingStart="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/postponed"
                        android:paddingLeft="5dp" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>